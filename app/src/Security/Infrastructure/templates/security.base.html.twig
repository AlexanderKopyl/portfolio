{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('footer') }}
    {{ encore_entry_link_tags('header') }}
{% endblock %}

{% block header_javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('header') }}
    {{ encore_entry_script_tags('footer') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('headerFunctional') }}
    {{ encore_entry_script_tags('footerFunctional') }}
{% endblock %}

{% block header %}
    {% include 'header.twig' %}
{% endblock %}

{% block footer %}
    {% include 'footer.twig' %}
{% endblock %}
